<apex:page renderAs="PDF" controller="IPC070Controller" standardStylesheets="true" lightningStylesheets="false" applyBodyTag="false" applyHtmlTag="false" showHeader="false" sidebar="false">
<apex:form >
<apex:repeat value="{!customForm.quoteLines}" var="quoteLine">

    <title>IPC070</title>

    <head>
        <style type="text/css" media="print">
            @page {
                size: 8.5in 11in portrait;
                margin-top: 0.2in;
                margin-bottom: 0.2in;
                margin-left: 0.4in;
                margin-right: 0.3in;
            }
        </style>
    </head>

    <body style="font-family: sans-serif; font-size: 10pt;">

        <!--Header-->
        <div>
            <table style="width:100%">
                <tr>
                    <td>
                        <img src="{!$Resource.cf_shared_ipc_header}" alt="HeaderImage" />
                    </td>
                    <td style="text-align: right;">
                        Custom Product Order Form
                        <div style="text-align: right; font-weight:bold;">
                            855V/A855V/1255V/A1255V <br />
                            1455V/1655V/5055V</div>
                    </td>
                </tr>
            </table>
            <hr style="border-width:1px;" />
            <p style="padding-left: 8pt;;text-align: left;">
                Please complete the following information based on field verified dimensions.
                Orders for custom products cannot be cancelled or returned. Please sign and return to proceed with your
                order. Fax to {!customForm.quoteRecord.Inside_Rep__c} at 888-715-8407 for quotation. Sales contact: 800-222-5556.
            </p>
        </div>
        <!--Header Table-->
        <table style="width:100%; border-collapse: collapse; border: 2px solid black;">
            <tr>
                <td style="width: 25%; border: 1px solid black; padding: 8px;">Authorized Signature/Date</td>
                <td style="width: 20%; border: 1px solid black; padding: 8px;"></td>
                <td style="width: 20%; border: 1px solid black; padding: 8px;">Inpro Quote #</td>
                <td style="width: 35%;  border: 1px solid black; padding: 8px;">
                    <apex:outputField value="{!customForm.quoteRecord.QuoteNumber}" />
                </td>
            </tr>
            <tr>
                <td style="width: 25%; border: 1px solid black; padding: 8px;">Print Name/Title</td>
                <td style="width: 20%; border: 1px solid black; padding: 8px;">
                    <apex:outputField value="{!customForm.quoteRecord.ContactId}" />
                </td>
                <td style="width: 20%; border: 1px solid black; padding: 8px;">Project Name</td>
                <td style="width: 350%; border: 1px solid black; padding: 8px;">
                    <apex:outputField value="{!customForm.quoteRecord.Opportunity_Name__c}" />
                </td>
            </tr>
            <tr>
                <td style="width: 25%; border: 1px solid black; padding: 8px;">Company Name</td>
                <td style="width: 20%; border: 1px solid black; padding: 8px;">
                    <apex:outputField value="{!customForm.quoteRecord.Account_Name_Formula__c}" />
                </td>
                <td style="width: 20%; border: 1px solid black; padding: 8px;">Account #</td>
                <td style="width: 35%; border: 1px solid black; padding: 8px;">
                    <apex:outputField value="{!customForm.quoteRecord.Account.Customer_Number__c}" />
                </td>
            </tr>
        </table>

        <!--Handrail P/N Table-->
        <table style="border-collapse: collapse;">
            <tr>
                <td style="padding: 10px;"><strong>Standard Handrail P/N:</strong></td>
                <td style="padding: 10px;">
                    <div
                        style="width: 20px; height: 20px;  border: 1px solid #333; cursor: pointer; float: left; margin-right: 1px;background:#{!quoteLine.check_855V}">
                    </div>
                    <div style="display: inline-block; float: right;">855V</div>
                </td>
                <td style="padding: 10px;">
                    <div
                        style="width: 20px; height: 20px;  border: 1px solid #333; cursor: pointer; float: left; margin-right: 1px;background:#{!quoteLine.check_A855V}">
                    </div>
                    <div style="display: inline-block; float: right;">A855V</div>
                </td>
                <td style="padding: 10px;">
                    <div
                        style="width: 20px; height: 20px;  border: 1px solid #333; cursor: pointer; float: left; margin-right: 1px;background:#{!quoteLine.check_1255V}">
                    </div>
                    <div style="display: inline-block; float: right;">1255V</div>
                </td>
                <td style="padding: 10px;">
                    <div
                        style="width: 20px; height: 20px;  border: 1px solid #333; cursor: pointer; float: left; margin-right: 1px;background:#{!quoteLine.check_A1255V}">
                    </div>
                    <div style="display: inline-block; float: right;">A1255V</div>
                </td>
            </tr>
            <tr>
                <td style="padding: 10px;"><strong>Standard Wall Guard P/N</strong></td>
                <td style="padding: 10px;">
                    <div
                        style="width: 20px; height: 20px;  border: 1px solid #333; cursor: pointer; float: left; margin-right: 1px;background:#{!quoteLine.check_1455V}">
                    </div>
                    <div style="display: inline-block; float: right;">1455V</div>
                </td>
                <td style="padding: 10px;">
                    <div
                        style="width: 20px; height: 20px;  border: 1px solid #333; cursor: pointer; float: left; margin-right: 1px;background:#{!quoteLine.check_1655V}">
                    </div>
                    <div style="display: inline-block; float: right;">1655V</div>
                </td>
                <td style="padding: 10px;">
                    <div
                        style="width: 20px; height: 20px;  border: 1px solid #333; cursor: pointer; float: left; margin-right: 1px;background:#{!quoteLine.check_5055V}">
                    </div>
                    <div style="display: inline-block; float: right;">5055V</div>
                </td>
            </tr>
        </table>

        <!--Quantity Table-->
        <table style="width:50%; padding-left:9px; padding-top:15px; padding-bottom:30px;">
            <tr>
                <td><label for="qty"><strong>Quantity of Part Number:</strong></label></td>
                <td style="width:40%;">
                    <div
                        style="text-align:center; display: inline-block; width: 95%;  border: none; border-bottom: 1px solid #999; outline: none;">
                        {!quoteLine.quoteLineItem.Quantity}</div>
                </td>
            </tr>
        </table>

        <!--Color Table-->
        <table style="width:100%">
            <tr>
                <td>
                    <strong>Solid Color Profile w/ Elements or Woodland Insert</strong>
                    <table style="border-collapse: collapse; width:85%; border:black; border-style:solid">
                        <tr>
                            <td style="border: 1px solid black; padding:8px;">
                                Profile Color # &amp; Name
                            </td>
                            <td style="border: 1px solid black; padding:8px;">
                                Insert Color # &amp; Name*
                            </td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid black; padding:8px;">
                                &nbsp;
                            </td>
                            <td style="border: 1px solid black; padding:8px;">
                                &nbsp;
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <p style="font-style:italic; font-size:12px;">* This cannot be an Elements pattern #
                                    listed under Option 3.</p>
                            </td>
                        </tr>
                    </table>

                </td>
                <td style="width:15%">
                    <img src="{!$Resource.cf_ipc070_handrail}" alt="ProfileInsert" />
                </td>
            </tr>
        </table>

        <!--Option Description -->
        <table style="width:100%">
            <tr>
                <td style="width:35%">
                    <strong>
                        Option 3: Elements Series Insert -
                    </strong>
                </td>
                <td>
                    <p>The Element patterns noted below is
                        only available with the solid color profile indicated.</p>
                </td>
            </tr>
        </table>

        <!-- Pattern Table -->
        <table style="border-collapse: collapse; width:40%; border:black; border-style:solid;text-align:center;">
            <tr>
                <td style="border: 1px solid black; padding:8px;">
                    X
                </td>
                <td style="border: 1px solid black; padding:8px;">
                    Insert Pattern
                </td>
                <td style="border: 1px solid black; padding:8px;">
                    Profile Color
                </td>
            </tr>
            <tr>
                <td style="border: 1px solid black; padding:8px;">
                    <div
                        style="width: 20px; height: 20px; border: 1px solid #333; cursor: pointer; float: left; margin-right: 1px;">
                    </div>
                </td>
                <td style="border: 1px solid black; padding:8px;">
                    5Z112
                </td>
                <td style="border: 1px solid black;padding:8px;">
                    Dover White
                </td>
            </tr>
        </table>

        <br /><br /><br /><br /><br /><br />
        <!-- Bottom Footer -->
    <div style="page-break-after: auto;">
        <table style="padding-top:35px; border-collapse: collapse; width:100%; border:black; border-style:solid;">
            <tr>
                <td style="border: 1px solid black; padding:6px;">
                    FOR INPRO USE ONLY
                </td>
                <td style="border: 1px solid black; padding:6px;">
                    {!customForm.quoteRecord.Inside_Rep__c}
                </td>
                <td style="border: 1px solid black; padding:6px;">
                    Customer Order #:
                </td>
            </tr>
            <tr>
                <td style="border: 1px solid black; padding:6px;">
                Form  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  of        
                </td>
                <td style="border: 1px solid black; padding:6px;">
                    Inpro Drawing: N/A
                </td>
                <td style="border: 1px solid black;padding:6px;">
                    Inpro #:
                </td>
            </tr>            
        </table>

        <table style="width:100%; padding:2px;">
            <tr>
                <td style="width:15%" ><img style="width:100px;" src="{!$Resource.cf_shared_inpro_footer}" alt="Inpro" /></td>
                <td style="width:70%">Sales 800.222.5556 / Fax: 888.715.8407</td>
                <td style="width:15%" >IPC.076/Rev.11</td>
            </tr>
        </table>
    </div>
    </body>

</apex:repeat>
</apex:form>
</apex:page>