<aura:component implements="force:lightningQuickActionWithoutHeader,force:hasRecordId">
    <!--  this tag sets modal width -->
    <aura:html tag="style">
        .slds-modal__container {
        min-width: 50vw;          
        }
        .cuf-content{
            padding:0 !important;
        }
        .slds-p-around--medium{
            padding:0 !important;
        }
        .slds-modal__content{
            height:unset !important;
            max-height:unset !important;
        }
    </aura:html>  
    <c:orderConfirmationSend recordId="{!v.recordId}" onclose="{!c.closeQA}"></c:orderConfirmationSend>
</aura:component>